<!DOCTYPE html>
<html>
	<head>
	  <title><%= title %></title>
	  <%= csrf_meta_tag %>
		<%= render 'layouts/stylesheets' %>
	</head>
	<body>
		<%= render 'layouts/header' %>
		<% flash.each do |key, value| %>
			<div class="flash <%= key %>"><%= value %></div>
		<% end %>
		<%= yield %> 
		<%= render 'layouts/footer' %>
	</body>
</html>
