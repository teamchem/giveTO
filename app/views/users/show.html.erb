<% @events ||= current_user.events %>
<div class="insideDiv">
	<h1>Hello, <%= @user.first_name %>!</h1>
	<h3 class="headerBar">Your Opportunities:</h3>
	<% if signed_in? %>
		<% unless @events.empty? %>
			<div class="tiles" style="width: 800px;">
			<% @events.each do |e| %>
				<a href="../events/show/<%= e.id %>"><%= e.start_time.strftime(fmt='%m/%d/%Y') %>: <%= e.name	 %> </a>
				<div class="clear"></div>
			<% end %>
			</div>
			<div class="clear"></div>
			<a class="fancy_button" href="/events/all	">
			  <span style="background-color: #0071bc;">Find more</span>
			</a>
		<% end %>	
	<% end %>
</div>