<div id="content">
    <p id="intro">
        giveTo is free, fun and easy. Sign up now to give back to your community.
    </p>
		
		<%= form_for(@user) do |f| %>
		 <%= render 'shared/error_messages' %>
		<p>
			<%= f.label :first_name %>
			<%= f.text_field :first_name, :size => 30 %>
		</p>
		<p>
			<%= f.label :last_name %>
			<%= f.text_field :last_name, :size => 30 %>
		</p>
		<p>
			<%= f.label :email %>
			<%= f.text_field :email, :size => 30 %>
		</p>
		<p>
			<%= f.label :phone %>
			<%= f.text_field :phone, :size => 30 %>
		</p>
		<p>
			<%= f.label :password %>
			<%= f.text_field :password, :size => 30 %>
		</p>
		<p>
			<%= f.label :password_confirmation %>
			<%= f.text_field :password_confirmation	, :size => 30 %>
		</p>
		<%= image_submit_tag "../images/submitButtonBlueBig.png" %>
		<% end %>

